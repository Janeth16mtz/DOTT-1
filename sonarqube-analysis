pipeline {
    agent any
    tools {
        go 'Go_version'
    }
    environment {
        GO114MODULE = 'on'
        CGO_ENABLED = 0 
        GOPATH = "${env.WORKSPACE}/go"
    }
    stages {        
        stage('Pre Test') {
            steps {
                sh "echo 'Installing dependencies'"
                sh 'go version'
                sh 'go get -u golang.org/x/lint/golint'
            }
        }
        stage('Build') {
            steps {
                sh "echo 'Compiling and building'"
                sh 'go build'
            }
        }
    }
}
