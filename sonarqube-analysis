pipeline {
    agent any
    tools {
        go 'Go_version'
    }
    environment {
        GO114MODULE = 'auto'
        CGO_ENABLED = 0 
        GOPATH = "${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_ID}"
    }
    stages {   
        stage('Cone repository'){
            steps{
                sh 'rm -r DOTT-1'
                sh 'git clone https://github.com/Janeth16mtz/DOTT-1'
            }
        }
        stage('Pre Test') {
            steps {
                sh "echo 'Installing dependencies'"
                sh 'go version'
                sh 'go get -u https://github.com/Janeth16mtz/DOTT-1/cidr_convert_api/go'
            }
        }
        stage('Build') {
            steps {
                sh "echo 'Compiling and building'"
                sh 'go build'
            }
        }
    }
}
