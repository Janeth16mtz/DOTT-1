pipeline {
    agent any
    tools {
        go 'Go_version'
    }
    environment {
        GO114MODULE = 'on'
        CGO_ENABLED = 0 
        GOPATH = "/DOTT-1/cidr_convert_api/go"
    }
    stages {   
        stage('Cone repository'){
            steps{
                sh 'cd /'
                sh 'git clone https://github.com/Janeth16mtz/DOTT-1'
            }
        }
        stage('Pre Test') {
            steps {
                sh "echo 'Installing dependencies'"
                sh 'go version'
                sh 'go get -u golang.org/x/lint/golint'
            }
        }
        stage('Build') {
            steps {
                sh "echo 'Compiling and building'"
                sh 'go build'
            }
        }
    }
}
