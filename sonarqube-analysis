pipeline {
    agent any
    tools {
        go 'Go_version'
    }
    environment {
        GO114MODULE = 'on'
        CGO_ENABLED = 0 
        GOPATH = "/var/lib/jenkins/jobs/DevOps-Project/builds/${BUILD_ID}"
    }
    stages {        
        stage('Pre Test') {
            steps {
                sh "echo 'Installing dependencies'"
                sh 'go version'
                sh 'go get -u golang.org/x/lint/golint'
            }
        }
   }
}
